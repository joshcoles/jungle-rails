<div class="col-sm-7">
  <div class="panel panel-default">
    <div class="panel-heading">
      <div>
      <strong>
          <%= review.user.name %>
      </strong>
      <em>
      - <%= review.rating %> / 5
      </em>
      </div>
    </div>
    <div class="product-review">
    '<%= review.description %>'
    </div>
    <div class="review-delete-button pull-right">
        <% if current_user && current_user.id == review.user.id %>
          <%= link_to 'Delete', [review.product, review],
            method: :delete,
            data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        <% end %>
    </div>
  </div>


</div>
<div class="col-sm-4">
</div>










