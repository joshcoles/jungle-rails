<div class="container col-xs-12 col-sm-6 col-md-8">
  <div><strong><%= review.rating %> / 5</strong> - '<%= review.description %>'</div>
  <div>-<em><%= review.user.name %></em></div><br>
    <% if current_user && current_user.id == review.user.id %>
      <%= link_to 'Delete', [review.product, review],
        method: :delete,
        data: { confirm: 'Are you sure?' } %>
    <% end %>
</div>






